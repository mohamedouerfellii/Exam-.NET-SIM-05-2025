@model Examen.ApplicationCore.Domain.Course

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomCourse" class="control-label"></label>
                <input asp-for="NomCourse" class="form-control" />
                <span asp-validation-for="NomCourse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCourse" class="control-label"></label>
                <input asp-for="DateCourse" class="form-control" />
                <span asp-validation-for="DateCourse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lieu" class="control-label"></label>
                <input asp-for="Lieu" class="form-control" />
                <span asp-validation-for="Lieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PisteFk" class="control-label"></label>
                <select asp-for="PisteFk" asp-items=ViewBag.lsPiste class="form-control"></select>
                <span asp-validation-for="PisteFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
